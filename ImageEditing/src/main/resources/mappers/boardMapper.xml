<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.spring.img.mappers.boardMapper">


	<insert id="create" parameterType="BoardVO">
		insert into
		tbl_board
		(title,content,userid,insert_date)
		values
		(#{title},#{content},#{userid},now())
	</insert>

	<select id="read" resultType="BoardVO">
		select * from tbl_board
		where bno =
		#{bno}


	</select>


	<update id="update">
		update tbl_board
		set
		title = #{title},
		content = #{content}
		where bno = #{bno}
	</update>

	<delete id="delete">
		delete from tbl_board where bno = #{bno}
	</delete>


	<sql id="condition">
		<if test="sType != null">
			<if test="sType eq 'title'.toString()">
				and title like '%#{keyword}%'

			</if>
			<if test="sType eq 'content'.toString()">
				and content like '%#{keyword}%'
			</if>
			<if test="sType eq 'userid'.toString()">
				and userid like '%#{keyword}%'
			</if>
			<if test="sType eq 'date'.toString()">
				and insert_date like '%#{keyword}%'
			</if>

		</if>

	</sql>

	<select id="list" parameterType="Criteria" resultType="BoardVO">
		select
		bno,
		title,
		content,
		userid,
		insert_date
		from tbl_board
		where bno > 0
	<include refid="condition"></include>
		order by bno desc
		limit #{page},10
	</select>

	<select id="listCount" resultType="java.lang.Integer">
		select count(1) from tbl_board
		where bno > 0
	</select>


</mapper>
